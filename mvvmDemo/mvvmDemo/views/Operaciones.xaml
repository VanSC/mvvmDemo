<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mvvmDemo.views.Operaciones">
    <ContentPage.Content>
        <StackLayout Padding="60">
            <Label Text="Operaciones" Padding="15" FontSize="Title" TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Entry Placeholder="entry 1" FontSize="Title" Text="{Binding Valor1}"></Entry>
            <Entry Placeholder="entry2" FontSize="Title" Text="{Binding Valor2}"></Entry>
            <Entry Placeholder="entry2" FontSize="Title" Text="{Binding Valor3}"></Entry>
            <Button Text="sumar" FontAttributes="Bold" Command="{Binding Sumar}"></Button>
            <Label Text="Resultado suma:" FontSize="Caption"></Label>
            <Label Text="{Binding ResultadoSuma}"></Label>
            <Button Text="multiplicar" FontAttributes="Bold" Command="{Binding Multiplicar}"></Button>
            <Label Text="Resultado Multiplicar:" FontSize="Caption"></Label>
            <Label Text="{Binding ResultadoMultiplicar}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>